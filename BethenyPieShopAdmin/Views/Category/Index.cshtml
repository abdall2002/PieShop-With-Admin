@model CategoryListViewModel

<h2>Categories</h2>
<hr />

@if (TempData["CategoryDeleted"] != null)
{
    <p class="text-success">@TempData["CategoryDeleted"]</p>
}

@if (!Model.Categories.Any())
{
    <div class="alert alert-info text-center">
        No categories at this point.
    </div>
}
else
{
    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date Added</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.DateAdded?.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@category.CategoryId">Details</a>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="Add">Add new category</a>
</p>
